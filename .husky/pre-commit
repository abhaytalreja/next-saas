#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ›¡ï¸  NextSaaS Guard Rails - Pre-commit Quality Checks"

# Run lint-staged for file-specific checks
echo "ğŸ“ Running lint-staged..."
npx lint-staged

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --audit-level moderate || true

# Check for secret leaks (if secretlint is available)
if command -v secretlint >/dev/null 2>&1; then
  echo "ğŸ” Scanning for secrets..."
  npx secretlint "**/*" || true
fi

# Validate design tokens
echo "ğŸ¨ Validating design tokens..."
npm run validate:design-tokens || true

# Check bundle size impact
echo "ğŸ“¦ Checking bundle size impact..."
npm run bundle:check || true

echo "âœ… Pre-commit checks completed!"