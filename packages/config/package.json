{
  "name": "@nextsaas/config",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.mjs",
      "require": "./dist/schemas/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    },
    "./i18n": {
      "types": "./i18n/index.d.ts",
      "import": "./i18n/index.mjs",
      "require": "./i18n/index.js"
    },
    "./tailwind": {
      "types": "./tailwind/index.d.ts",
      "import": "./tailwind/index.js",
      "require": "./tailwind/index.js"
    }
  },
  "bin": {
    "nextsaas-config": "./dist/cli.js"
  },
  "files": [
    "dist",
    "eslint",
    "tailwind",
    "design-tokens",
    "i18n",
    "use-cases",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:types": "tsx scripts/generate-types.ts",
    "generate:docs": "tsx scripts/generate-docs.ts",
    "generate:env": "tsx scripts/generate-env-example.ts",
    "validate": "tsx scripts/validate-config.ts",
    "setup": "tsx scripts/setup-env.ts"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.2.0",
    "dotenv": "^16.3.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@nextsaas/tsconfig": "*",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.6.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}