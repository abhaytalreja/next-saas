{
  "name": "@nextsaas/enterprise-auth",
  "version": "0.0.0",
  "private": true,
  "description": "Enterprise authentication and SSO features for NextSaaS",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "module": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.mjs",
      "module": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nextsaas/auth": "*",
    "@nextsaas/config": "*",
    "@next-saas/multi-tenant": "*",
    "@nextsaas/ui": "*",
    "@nextsaas/utils": "*",
    "@supabase/ssr": "^0.5.1",
    "@supabase/supabase-js": "^2.45.4",
    "fast-xml-parser": "^4.3.2",
    "jose": "^5.6.3",
    "node-saml": "^4.0.5",
    "react-hook-form": "^7.60.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nextsaas/tsconfig": "*",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0"
  }
}